<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color : #ffee93; border-color: #fcf5c7;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Membuat Tabungan", "create", "tabungan", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Item", "Index", "item")</li>
                    <li>@Html.ActionLink("Tabungan", "Index", "tabungan")</li>
                    <li>@Html.ActionLink("Detail_Tabungan", "Index", "detail_tabungan")</li>
                    <li>@Html.ActionLink("Users", "Index", "users")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
<footer class="bg-light text-center text-lg-start">
    <div>
        <div style="border: 2px; text-align:center; margin:auto; width:100%">
            <div class="text-center p-3" style="background-color: #3C3C3C; width: 100%">
                <div style="color:white">
