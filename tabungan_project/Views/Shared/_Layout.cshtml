                    <div> Nurferdiansyah Krisna Pratama (21241012063) </div>
                    <div> Eka Prasetya Nugraha (212410102074)         </div>
                    <div>
                        &copy; @DateTime.Now.Year PROJECT PBO
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
