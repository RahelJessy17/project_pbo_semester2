@model IEnumerable<tabungan_project.Models.users>

@{
    ViewBag.Title = "Index";
}

<h2 style="color: #BEA42E"><b><img src="~/fonts/img/users.png" width="4%" />DATA USERS</b></h2>
<br />

<p style="color: #BEA42E">
    Apakah anda ingin @Html.ActionLink("buat baru", "Create",new { @area = "" }) data users ???
</p>
<table class="table">
    <style>
        tr:nth-child(even) {
            background-color: #F9FE8B;
        }
    </style>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_user)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nama_user)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nomor_hp)
        </th>
        <th>
            @Html.ActionLink("id_status", "index", "status")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_user)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nama_user)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomor_hp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_status)
            </td>
            <td>
                @Html.ActionLink("Ubah", "Edit", new { id = item.id_user }, new { @class = "btn btn-warning" }) 
                @Html.ActionLink("Details", "Details", new { id = item.id_user }, new { @class = "btn btn-info" }) 
                @Html.ActionLink("Hapus", "Delete", new { id = item.id_user }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
