@model tabungan_project.Models.users

@{
    ViewBag.Title = "Create";
}
<div style="color:chocolate">
    <div style="text-align:center">
        <h1 style="font-family: Futura-Black"> Selamat Datang Di Program Kami </h1>
        <br />
        <div style="text-align:center">
            <img src="~/fonts/img/coins.png" width="40%" />
        </div>
        <div style="font-family:Poppins">
            <h4 style="text-align:center">
                Aplikasi MonQ adalah aplikasi pengatur keuangan yang hadir untuk membantu user  mencapai target barang impiannya.
                Di aplikasi ini user dapat menabung secara terstruktur sehingga menabung lebih nyaman dan konsisten.
                Kelebihan menabung menggunakan Monq adalah User dapat menabung dengan sambil melihat progress tabungannya.
                Sehingga user dapat mengetahui harus menabung berapa lama dengan rincian tabungan perharinya.
            </h4>
            <br />
            <br />
            <hr />
            <h1 style="text-align:center"><b style="font-family: Futura-Black">Sign Up</b></h1>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="color: #BEA42E">Apakah anda sudah memiliki akun ? check @Html.ActionLink("disini !!!", "index", "users")</h4>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nama_user, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nama_user, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nama_user, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nomor_hp, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomor_hp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nomor_hp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.passwords, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.passwords, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.passwords, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.id_status, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.id_status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
